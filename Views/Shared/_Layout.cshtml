<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] -<strong><strong><strong>ByteForum</strong></strong></strong></title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
 
    <link rel="stylesheet" href="~/css/navbarstyle.css" />

</head>
<body>
   <!-- HTML -->
<header>
    <nav class="navbar navbar-expand-md navbar-light bg-aqua border-bottom box-shadow">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="C:\Users\hp\source\repos\Byte-Forum\wwwroot\images\bflogo.png" alt="ByteForum Logo">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                    aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav me-auto mb-2 mb-md-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Tags">Tags</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Users">Users</a>
                    </li>
                    @* <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="askaque">Ask a Question</a>
                    </li> *@
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <div class="login-container">
                            <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="signup">Signup</a>
                        </div>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <div class="login-container">
                            <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
